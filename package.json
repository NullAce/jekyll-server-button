{
  "name": "jekyll-server-button",
  "displayName": "Jekyll Server Button",
  "description": "Adds convenient buttons to start Jekyll development server with customizable host and port settings",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "license": "MIT",
  "homepage": "https://github.com/your-username/jekyll-server-button#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/jekyll-server-button.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/jekyll-server-button/issues"
  },
  "keywords": [
    "jekyll",
    "server",
    "development",
    "ruby",
    "static-site",
    "web-development"
  ],
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jekyll-server-button.startServer",
        "title": "Jekyll: Start Local Server",
        "icon": "$(server)"
      },
      {
        "command": "jekyll-server-button.startServerCustom",
        "title": "Jekyll: Start Server with Custom Settings",
        "icon": "$(settings)"
      },
      {
        "command": "jekyll-server-button.stopServer",
        "title": "Jekyll: Stop Server",
        "icon": "$(stop)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Jekyll Server Button",
      "properties": {
        "jekyllServerButton.defaultPort": {
          "type": "number",
          "default": 4000,
          "description": "Default port for Jekyll server",
          "minimum": 1,
          "maximum": 65535
        },
        "jekyllServerButton.defaultHost": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "Default host/address for Jekyll server"
        },
        "jekyllServerButton.additionalArgs": {
          "type": "string",
          "default": "",
          "description": "Additional arguments to pass to Jekyll serve command"
        },
        "jekyllServerButton.showInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show Jekyll button in status bar"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jekyll-server",
          "title": "Jekyll Server",
          "icon": "$(server)"
        }
      ]
    },
    "views": {
      "jekyll-server": [
        {
          "id": "jekyllServerView",
          "name": "Jekyll Server",
          "when": "true",
          "icon": "$(server)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "jekyll-server-button.startServer",
          "when": "view == jekyllServerView",
          "group": "navigation@1"
        },
        {
          "command": "jekyll-server-button.startServerCustom",
          "when": "view == jekyllServerView",
          "group": "navigation@2"
        },
        {
          "command": "jekyll-server-button.stopServer",
          "when": "view == jekyllServerView",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "jekyll-server-button.startServerCustom",
          "when": "view == jekyllServerView",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
